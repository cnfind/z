
config samba
	option workgroup 'WORKGROUP'
	option charset 'UTF-8'
	option description 'Samba on OpenWRT'
	option name 'OpenN1'
	option homes '0'
	option macos '0'

config sambashare
	option name 'zCloud'
	option path '/mnt/sda3/share'
	option read_only 'no'
	option force_root '1'
	option guest_ok 'yes'
	option inherit_owner 'yes'
	option create_mask '0666'
	option dir_mask '0777'
